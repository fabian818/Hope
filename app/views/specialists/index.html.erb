<h1>Listing specialists</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Speciality</th>
      <th>Shift</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @specialists.each do |specialist| %>
      <tr>
        <td><%= specialist.person_id %></td>
        <td><%= specialist.speciality %></td>
        <td><%= specialist.shift %></td>
        <td><%= link_to 'Show', specialist %></td>
        <td><%= link_to 'Edit', edit_specialist_path(specialist) %></td>
        <td><%= link_to 'Destroy', specialist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

