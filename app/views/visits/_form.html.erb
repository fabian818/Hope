    <%= f.label :assistance_date %><br>
    <%= f.datetime_select :assistance_date %>
  </div>
  <div class="field">
    <%= f.label :visit_type %><br>
    <%= f.text_field :visit_type %>
  </div>
  <div class="field">
    <%= f.label :observation %><br>
    <%= f.text_area :observation %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.check_box :state %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  El id de tratamiento es : <%= session[:treatment_id] %>
<% end %>
